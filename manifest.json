{
    "manifest_version": 3,
    "name": "PaperHand Trading Overlay",
    "version": "1.0",
    "description": "Overlay for paper trading on Photon and BullX Neo.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "https://photon.art/*",
      "https://neo.bullx.io/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://photon-sol.tinyastro.io/*",
          "https://neo.bullx.io/*"
        ],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  